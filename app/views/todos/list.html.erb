<%= render 'navbar' %>
<div class="container" style="padding: 50px;">

  <div class="row">
    <div class="col-md-6">
      <h1>Done</h1>


    <% @todos.each do |todo| %>
        <% if todo.completed %>
        <div class="well">
          <h3><s> <%= link_to todo.description, todo %> </s></h3>
          <p> <%= todo.completed %> </p>
          <p><%= link_to 'Editar', edit_todo_path(todo) %> |
          <%= link_to "Borrar", todo, method: :delete, data: { confirm: '¿Estás Seguro?' } %>
          </p>
        </div>
        <% end %>
    <% end %>

  </div>

  <div class="col-md-6">
    <h1>2Do</h1>
    <% @todos.each do |todo| %>
        <% if !todo.completed %>
        <div class="well">
          <h3> <%= link_to todo.description, todo %> </h3>
          <p> <%= todo.completed %> </p>
          <p><%= link_to 'Editar', edit_todo_path(todo) %> |
          <%= link_to "Completado", complete_path(todo) %> |
          <%= link_to "Borrar", todo, method: :delete, data: { confirm: '¿Estás Seguro?' } %>
          </p>
        </div>
        <% end %>
    <% end %>

  </div>


</div>



</div>
